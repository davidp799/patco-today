                android:text="@string/fares_round_trip_ferry_avenue">
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/anyNjToAnyNjRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_even_background">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_from_any_nj">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_to_any_nj">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_one_way_any_nj">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
