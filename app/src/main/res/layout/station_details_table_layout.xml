                android:layout_weight="0.25"
                android:text="@string/fares_one_way_broadway_west">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_round_trip_broadway_west">
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/philadelphiaToPhiladelphiaRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_odd_background">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_any_philadelphia">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_any_philadelphia">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_one_way_broadway_west">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_round_trip_broadway_west">
            </TextView>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
