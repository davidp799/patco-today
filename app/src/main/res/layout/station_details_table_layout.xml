            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/broadwayCityHallToPhiladelphiaRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_even_background">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="@string/fares_from_broadway_city_hall">
            </TextView>
            <TextView
